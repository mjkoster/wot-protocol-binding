{
  "semtype": ["thing", "sch:light"],
  "name": "Example Light Thing",
  "interactions": [
    {
      "semtype": ["action", "sch:setlevel"],
      "name": "set brightness level",
      "inputdata": {
        "type": "object",
        "properties": {
          "targetlevel": {
            "type": "number",
            "semtype": "sch:level"
          },
          "ramptime": {
            "type": "number",
            "semtype": "sch:transitiontime"
          }
        }
      },
      "links": [
        {
          "href": "/example/light/",
          "method": "ocf.update",
          "ocf.rt": ["oic.r.light"],
          "ocf.if": ["oic.if.b"],
          "inputschema": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "value": ""
              },
              "rep": {
                "type": "object",
                "properties": {
                  "brightness": {
                    "type": "number",
                    "value": "{{targetlevel}}"
                  },
                  "ramptime": {
                    "type": "number",
                    "value": "{{ramptime}}"
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}

{
  "@context": [
    "http://w3c.github.io/wot/w3c-wot-td-context.jsonld",
    "http://w3c.github.io/wot/w3c-wot-common-context.jsonld",
	  {"iot": "http://iotschema.org/"}
  ],
  "base": "http://exampl.com/",
  "@type": [ "Thing", "iot:Light", "iot:Dimmer", "iot:BinarySwitch" ],
  "name": "Lamp",
  "interaction": [
    {
      "name": "Switch State",
      "@type": ["Property", "iot:SwitchStatus"],
      "outputdata":  {
        "type": "object",
        "observable": "true",
        "fields": [
          {
            "name": "switch",
            "value": {
              "@type": ["iot:SwitchData"],
              "type": "boolean",
            }
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/currentswitch",
          "mediatype": "application/json",
          "rel": "td:getProperty",
          "http:methodName": "http:get"
        },
        {
          "href": "/example/light/currentswitch",
          "mediatype": "application/json",
          "rel": "td:setProperty",
          "http:methodName": "http:post"
        },
        {
          "href": "mqtt://example.com/example/light/currentswitch",
          "rel": "td:observe",
          "mqtt:methodName": "mqtt:subscribe"
        }
      ]
    },
    {
      "name": "Current brightness",
      "@type": ["Property", "iot:CurrentDimmer"],
      "outputData": {
        "type": "object",
        "observable": "true",
        "fields": [
          {
            "name": "brightness",
            "value": {
              "type": "integer",
              "@type": ["iot:DimmerData" ],
              "min": 0,
              "max": 255
            }
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/currentdimmer",
          "mediatype": "application/json",
          "rel": "td:getProperty",
          "http:methodName": "http:get"
        },
        {
          "href": "/example/light/currentdimmer",
          "mediatype": "application/json",
          "rel": "td:setProperty",
          "http:methodName": "http:post"
        },
        {
          "href": "mqtt://example.com/example/light/currentdimmer",
          "rel": "td:observe",
          "mqtt:methodName": "mqtt:subscribe"
        }
      ]
    },
    {
      "name": "Transition Time",
      "@type": ["Property", "iot:TransitionTIme"],
      "outputData": {
        "type": "object",
        "fields": [
          {
            "name": "ramptime",
            "value": {
              "type": "integer",
              "@type": ["iot:TransitionTimeData" ],
              "min": 0,
              "max": 255
            }
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/ramptime",
          "mediatype": "application/json",
          "rel": "td:getProperty",
          "http:methodName": "http:get"
        },
        {
          "href": "/example/light/ramptime",
          "mediatype": "application/json",
          "rel": "td:setProperty",
          "http:methodName": "http:post"
        }
      ]
    },
    {
      "name": "Switch On",
      "@type": ["Action", "iot:SwitchOn"],
      "outputdata":  {
        "type": "object",
        "fields": [
          {
            "name": "switch",
            "value": true
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/currentswitch",
          "mediatype": "application/json",
          "rel": "td:invokeAction",
          "http:methodName": "http:post"
        }
      ]
    },
    {
      "name": "Switch Off",
      "@type": ["Action", "iot:SwitchOff"],
      "outputdata":  {
        "type": "object",
        "fields": [
          {
            "name": "switch",
            "value": false
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/currentswitch",
          "mediatype": "application/json",
          "rel": "td:invokeAction",
          "http:methodName": "http:post"
        }
      ]
    },
    {
      "name": "Set brightness level",
      "@type": ["Action", "iot:SetDimmer"],
      "inputData": {
        "type": "object",
        "fields": [
          {
            "name": "brightness",
            "value": {
              "type": "integer",
              "@type": ["iot:DimmerData"],
              "min": 0,
              "max": 255
            }
          },
          {
            "name": "ramptime",
            "value": {
              "type": "integer",
              "@type": ["iot:RampTimeData"],
              "min": 0,
              "max": 65535
            }
          }
        ]
      },
      "link": [
        {
          "href": "/example/light/currentdimmer",
          "mediatype": "application/json",
          "rel": "td:invokeAction",
          "http:methodName": "http:post"
        }
      ]
    }
  ]
}
